@model Booking
<div class="container pt-4 mt-0 mt-lg-4">
    <div class="row" style="border: 1px solid #aaa;">

        <div class="col-12 col-lg-7 p-4 2 mt-4 mt-md-0">
            <div class="row p-1 my-1 " style="border-radius:20px; ">
                <div class="col-6">
                    <a asp-action="Index" asp-controller="Home"></a>
                    <h3 class="text-success">Villa Detayı</h3>
                </div>
                <div class="text-end col-6 ">
                    <a class="btn btn-sm btn-outline-danger" style="width:200px;">
                        <i class="bi bi-arrow-left-square"></i> &nbsp; Seçimi Değiştir
                    </a>
                </div>
                <hr />
                <div class="row">
                    <div class="col-12 col-md-5">
                        <img src="@Model.Villa.ImageUrl" style="border-radius:10px;" width="100%" />
                    </div>
                    <div class="col-12 col-md-7">
                        <div class="row p-2">
                            <div class="col-12">
                                <p class="card-title text-warning" style="font-size:xx-large">@Model.Name</p>
                                <p class="card-text" style="font-size:large">
                                    @Html.Raw(Model.Villa.Description)
                                </p>
                                @if (Model.Villa.VillaAmenity != null && Model.Villa.VillaAmenity.Count() > 0)
                                {
                                    <p class="h5 text-white">Villa Amenities</p>
                                    <ul>
                                        @foreach (var amenity in Model.Villa.VillaAmenity)
                                        {
                                            <li>@amenity.Name</li>
                                        }
                                    </ul>
                                }
                            </div>
                        </div>
                        <div class="row col-12">
                            <span class="text-end p-0 pt-3 m-0">
                                <span class="float-right">Max Occupancy : @Model.Villa.Occupancy yetişkin </span><br />
                                <span class="float-right pt-1">Villa Size : @Model.Villa.Sqmeters m²</span><br />
                                <p class="text-warning font-weight-bold pt-1">
                                    TL
                                    <span style=" #ff6a00">
                                        @Model.Villa.Price.ToString("c") / night
                                    </span>
                                </p>
                            </span>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="text-end">
                    <h4 class="text-danger font-weight-bold ">
                        Toplam Fiyat :
                        <span style="border-bottom:1px solid #ff6a00">
                            @Model.TotalCost.ToString("c")
                        </span>
                    </h4>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-5 p-4 2 mt-4 mt-md-0" style="border-left:1px solid #aaa">
            <form method="post">
                <input asp-for="VillaId" hidden />
                <input asp-for="UserId" hidden />
                <input asp-for="CheckInDate" hidden />
                <input asp-for="CheckOutDate" hidden />
                <input asp-for="Nights" hidden />
                <div class="row pt-1 mb-3 " style="border-radius:20px; ">
                    <div class="col-12">
                        <h3 class="text-success">Enter Booking Details</h3>
                    </div>
                </div>

                <div class="form-group pt-0">
                    <label asp-for="Name" class="text-warning">Ad-Soyad</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group pt-2">
                    <label asp-for="Phone"  class="text-warning">Telefon Numarası</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group pt-2">
                    <label asp-for="Email" class="text-warning">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group pt-2">
                    <label asp-for=CheckInDate class="text-warning">Giriş Tarihi</label>
                    <input asp-for="CheckInDate" disabled class="form-control" />
                </div>
                <div class="form-group pt-2">
                    <label asp-for=CheckOutDate class="text-warning">Çıkış Tarihi</label>
                    <input asp-for="CheckOutDate" disabled class="form-control" />
                </div>
                <div class="form-group pt-2">
                    <label asp-for="Nights" class="text-warning">Gece</label>
                    <input asp-for="Nights" disabled class="form-control" />
                </div>
                <div class="form-group pt-2 pt-md-4">
                    @if (Model.Villa.isAvailable)
                    {
                        <button type="submit" class="btn btn-success form-control">Rezervasyon Yap</button>
                    }
                    else
                    {
                        <input class="btn btn-danger disabled form-control" value="Rezervasyon Yapıldı" />
                            
                    }
                    
                    
                </div>
            </form>
        </div>
    </div>
</div>
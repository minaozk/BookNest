@using BookNest.Domain.Entities
@model IEnumerable<Villa>
<div class="container-fluid p-0">
	<!-- container-fluid ve padding'i sıfırla -->
	<div class="card-header bg-success bg-gradient py-3">
		<div class="row">
			<h2 class="text-white py-2">Villa Listesi</h2>
		</div>
	</div>
</div>
<div class="card-body border p-4">
	<div class="row pb-3">
		<div class="col-6 offset-6 text-end">
			<a asp-controller="Villa" asp-action="Create" class="btn btn-secondary"><i class="bi bi-plus-circle"></i>
				Yeni Villa Oluştur
			</a>
		</div>
	</div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Villa Adı</th>
				<th>Fiyat</th>
				<th>Metrekare</th>
				<th>Doluluk</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model)
			{
				<tr>
					<td>@obj.Name</td>
					<td>@obj.Price</td>
					<td>@obj.Sqmeters</td>
					<td>@obj.Occupancy</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Villa" asp-action="Update" asp-route-villaId ="@obj.Id" class="btn btn-success mx-2">
								<i class="bi bi-pencil-square"></i>
								Güncelle
							</a>
							<a asp-controller="Villa" asp-action="Delete" asp-route-villaId="@obj.Id" class="btn btn-danger mx-2">
								<i class="bi bi-trash-fill"></i>
								Sil
							</a>
						</div>
					</td>
				</tr>

			}
		</tbody>
	</table>
</div>

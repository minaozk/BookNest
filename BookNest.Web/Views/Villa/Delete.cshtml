
@model Villa

<div class="container-fluid p-0">
	<!-- container-fluid ve padding'i sıfırla -->
	<div class="card-header bg-success bg-gradient py-3">
		<div class="row">
			<h2 class="text-white py-2">Villa Sil</h2>
		</div>
	</div>
	<div class="card-body border p-4">
		<form method="post" class="row" enctype="multipart/form-data">
			<input asp-for="Id" hidden />
			<div class="col-10">
				<div class="p-3">
					@* <div asp-validation-summary="ModelOnly"></div> *@
					<div class="form-floating py-2 col-12">
						<input asp-for="@Model.Name" disabled class="form-control border shadow" style="color: white;" />

						<label asp-for="Name" class="ms-2" style="color: white;"></label>
					</div>
					<div class="form-floating py-2 col-12">
						<input asp-for="@Model.Description" disabled class="form-control border shadow" style="color: white;" />
						<label asp-for="Description" class="ms-2" style="color: white;"></label>

					</div>
					<div class="form-floating py-2 col-12">
						<input asp-for="@Model.Price" disabled class="form-control border shadow" style="color: white;" />
						<label asp-for="Price" class="ms-2" style="color: white;"></label>

					</div>
					<div class="form-floating py-2 col-12">
						<input asp-for="@Model.Sqmeters" disabled class="form-control border shadow" style="color: white;" />
						<label asp-for="Sqmeters" class="ms-2" style="color: white;"></label>

					</div>
					<div class="form-floating py-2 col-12">
						<input asp-for="@Model.Occupancy" disabled class="form-control border shadow" style="color: white;" />
						<label asp-for="Occupancy" class="ms-2" style="color: white;"></label>

					</div>
					<div class="form-floating py-2 col-12">
						<input asp-for="@Model.ImageUrl" disabled class="form-control border shadow" style="color: white;" />
						<label asp-for="ImageUrl" class="ms-2" style="color: white;"></label>

					</div>
					<div class="row pt-2">
						<div class="col-6 col-md-3">
							<button type="submit" class="btn btn-danger w-100">
								<i class="bi bi-trash-fill"></i>
								Sil
							</button>
						</div>
						<div class="col-6 col-md-3">
							<a asp-controller="Villa" asp-action="Index" class="btn btn-secondary w-100">
								<i class="bi bi-x-circle"></i>İptal
							</a>
						</div>
					</div>
				</div>
			</div>
			<div class="col-2">
				<img src="@Model.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
			</div>
			
		</form>
	</div>
</div>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

@model Villa

<div class="container-fluid p-0">
	<!-- container-fluid ve padding'i sıfırla -->
	<div class="card-header bg-success bg-gradient py-3">
		<div class="row">
			<h2 class="text-white py-2">Villa Oluştur</h2>
		</div>
	</div>
	<div class="card-body border p-4">
		<form method="post" class="row" enctype="multipart/form-data">
			<div class="p-3">
				@* <div asp-validation-summary="ModelOnly"></div> *@
				<div class="form-floating py-2 col-12">
					<input asp-for="@Model.Name" class="form-control border shadow" style="color: black;" />

					<label asp-for="Name" class="ms-2" style="color: black;"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="@Model.Description" class="form-control border shadow" style="color: black;" />
					<label asp-for="Description" class="ms-2" style="color: black;"></label>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="@Model.Price" class="form-control border shadow" style="color: black;" />
					<label asp-for="Price" class="ms-2" style="color: black;"></label>
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="@Model.Sqmeters" class="form-control border shadow" style="color: black;" />
					<label asp-for="Sqmeters" class="ms-2" style="color: black;"></label>
					<span asp-validation-for="Sqmeters" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="@Model.Occupancy" class="form-control border shadow" style="color: black;" />
					<label asp-for="Occupancy" class="ms-2" style="color: black;"></label>
					<span asp-validation-for="Occupancy" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="@Model.ImageUrl" hidden class="form-control border shadow" style="color: black;" />
					<input asp-for="@Model.Image"  class="form-control border shadow" style="color: black;" />
					<label asp-for="ImageUrl" class="ms-2" style="color: black;"></label>
					<span asp-validation-for="ImageUrl" class="text-danger"></span>
				</div>
				<div class="row pt-2">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-success w-100">
							<i class="bi bi-check-circle"></i>
							Ekle
						</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Villa" asp-action="Index" class="btn btn-secondary w-100">
							<i class="bi bi-x-circle"></i>İptal
						</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
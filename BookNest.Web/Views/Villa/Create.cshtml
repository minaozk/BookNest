@using BookNest.Domain.Entities
@model Villa

<div class="container-fluid p-0">
	<!-- container-fluid ve padding'i sıfırla -->
	<div class="card-header bg-success bg-gradient py-3">
		<div class="row">
			<h2 class="text-white py-2">Villa Oluştur</h2>
		</div>
	</div>
	<div class="card-body border p-4">
		<form method="post" class="row">
			<div class="p-3">
				<div class="form-floating py-2 col-12">
					<input asp-for="@Model.Name" class="form-control border shadow" style="color: black;" />

					<label asp-for="Name" class="ms-2" style="color: black;"></label>
				</div>
			</div>
		</form>
	</div>
</div>